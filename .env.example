# Database settings for the local PostgreSQL instance used with Docker Compose
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=booktracker

# Prisma and application settings for database access in local development
DATABASE_URL="postgresql://postgres:changeme@localhost:5433/booktracker?schema=public"

# NextAuth settings for local development
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="CHANGEME_generate_with: openssl rand -hex 32"
AUTH_TRUST_HOST=true

# SMTP settings for the Maildev inbox used in development
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# SMTP settings for production (SendGrid via SMTP) - example only, override in .env.production
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
