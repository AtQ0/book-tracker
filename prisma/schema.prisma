generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(cuid())
  email             String   @unique
  name              String?
  passwordHash      String?
  emailVerified     DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // keep auth as-is
  verificationCodes VerificationCode[]

  // shelf + rating
  userBooks         UserBook[]
}

enum VerificationPurpose {
  SIGNUP_VERIFY_EMAIL
  SIGNUP_SET_PASSWORD
  RESET_PASSWORD
}

model VerificationCode {
  id         String                @id @default(cuid())
  user       User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  codeHash   String
  purpose    VerificationPurpose
  expiresAt  DateTime
  consumedAt DateTime?
  createdAt  DateTime              @default(now())

  @@index([userId, purpose, consumedAt, expiresAt, createdAt])
  @@index([expiresAt])
}


enum ShelfStatus {
  haveRead
  currentlyReading
  wantToRead
}

model UserBook {
  id        String      @id @default(cuid())
  userId    String
  bookId    String
  status    ShelfStatus
  rating    Int?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@index([userId, status])
  @@index([bookId, status])
}

model Book {
  id               String   @id @default(uuid())
  name             String
  genre            String
  coverUrl         String
  description      String

  averageRating    Float    @default(0)
  ratingCount      Int      @default(0)

  haveRead         Int      @default(0)
  currentlyReading Int      @default(0)
  wantToRead       Int      @default(0)

  createdAt        DateTime @default(now())

  userBooks        UserBook[]
}
